<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quizgray"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:weightSum="17"
    tools:context="com.andy.tsylko.imbt.bsu.course_project_demo2.MainMenu">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="2dp"
        android:background="@color/quizblue2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_weight="5"
        android:background="@drawable/background_with_shadow"
        android:orientation="horizontal"

        android:weightSum="10">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@color/quizwhite"
            android:paddingLeft="2dp"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/teacher_rating"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:text="@string/teacher_rating"
            android:textColor="@color/quizgrayText"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_weight="5"
        android:background="@drawable/background_with_shadow"
        android:orientation="horizontal"

        android:weightSum="10">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@color/quizwhite"
            android:paddingLeft="2dp"

            android:src="@drawable/ic_calendar" />

        <TextView
            android:id="@+id/evaluate_teacher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:text="@string/teacher_current"
            android:textColor="@color/quizgrayText"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_weight="5"
        android:background="@drawable/background_with_shadow"
        android:orientation="horizontal"

        android:weightSum="10">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@color/quizwhite"
            android:paddingLeft="2dp"

            android:src="@drawable/ic_pie_chart" />

        <TextView

            android:id="@+id/teacher_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:text="@string/chart"
            android:textColor="@color/quizgrayText"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>