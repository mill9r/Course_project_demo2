<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quizgray"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:weightSum="17"
    tools:context="com.andy.tsylko.imbt.bsu.course_project_demo2.MainMenu">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_weight="2"
        android:background="@color/quizblue2"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="5"
        android:weightSum="10"
        android:orientation="horizontal"

        android:background="@drawable/background_with_shadow">

        <ImageView
            android:paddingLeft="6dp"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:src="@drawable/avatar"
            android:background="@color/quizwhite"
            android:layout_gravity="center"
            android:id="@+id/imageView" />

        <TextView
            android:id="@+id/teacher_rating"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/teacher_rating"
            android:textColor="@color/quizgrayText"
            android:textSize="20sp"
            android:layout_weight="9"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="5"
        android:weightSum="10"
        android:orientation="horizontal"

        android:background="@drawable/background_with_shadow">

        <ImageView
            android:paddingLeft="6dp"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:src="@drawable/ic_calendar"
            android:background="@color/quizwhite"
            android:layout_gravity="center"

            android:id="@+id/imageView2" />

        <TextView
            android:id="@+id/evaluate_teacher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/teacher_current"
            android:textColor="@color/quizgrayText"
            android:textSize="20sp"
            android:layout_weight="9"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="5"
        android:weightSum="10"
        android:orientation="horizontal"

        android:background="@drawable/background_with_shadow">

        <ImageView
            android:paddingLeft="6dp"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:src="@drawable/ic_pie_chart"
            android:background="@color/quizwhite"
            android:layout_gravity="center"

            android:id="@+id/imageView3" />

        <TextView
            android:id="@+id/teacher_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/chart"
            android:textColor="@color/quizgrayText"
            android:textSize="20sp"
            android:layout_weight="9"
            />
    </LinearLayout>

</LinearLayout>